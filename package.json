{
    "name": "glazegl",
    "version": "0.0.1",
    "description": "Typescript webGL 3D library",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "types": "lib/cjs/index.d.js",
    "sideEffects": false,
    "scripts": {
        "test": "jest",
        "lint": "eslint **/*.ts",
        "lint-fix": "eslint **/*.ts --fix",
        "build": "npm run build-clean && npm run build-cjs && npm run build-esm",
        "build-clean": "rm -rf lib/*",
        "build-cjs": "tsc -p tsconfig.cjs.json",
        "build-esm": "tsc -p tsconfig.esm.json",
        "coverage": "npm run test -- --coverage",
        "prepublishOnly": "npm run build"
    },
    "files": [
        "lib/"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run test"
        }
    },
    "author": "Thomas Dubosc (http://repraze.com)",
    "license": "MIT",
    "keywords": [
        "3d",
        "glazegl",
        "glaze",
        "webgl",
        "framework",
        "render",
        "canvas",
        "responsive"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/repraze-org/glaze.git"
    },
    "bugs": {
        "url": "https://github.com/repraze-org/glaze/issues"
    },
    "homepage": "https://github.com/repraze-org/glaze#readme",
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "eslint": "^7.17.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.7",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    }
}
